<% if @volunteer.errors.any? %>
	<h2>
		<%= pluralize(@volunteer.errors.count, "error") %> prohibted you from continuing. Please try again.
	</h2>
	<ul>
		<% @volunteers.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= simple_form_for(@volunteer) do |f| %>

	<%= f.input :first_name %><br>

	<%= f.input :last_name %><br>

	<%= f.input :email %><br>

	<%= f.input :distance, collection: 0..20000, prompt: "How far did you travel?" %>

	<%= f.input :transportation do %>
		<%= f.select :transportation, Transportation.all.map { |t| [t.mode, t.id] }, include_blank: true %>
	<% end %>

	<%= f.button :submit %>



<% end %>
